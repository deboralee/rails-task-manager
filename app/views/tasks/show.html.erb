
<p><%=@task.title%></p>
<p><%=@task.details%></p>
<% if @task.completed%>
<p>Task completed</p>
<%else %>
<p>Test is not completed</p>
<% end %>




<p><%= link_to "Edit this task", edit_task_path %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
<%= link_to "Back to list", tasks_path %>
